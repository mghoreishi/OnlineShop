@using _0_Framework.Infrastructure
@inject _0_Framework.Application.IAuthHelper AuthHelper;
@{
    var currentAccout = AuthHelper.CurrentAccountInfo();
}
<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            @*<div class="pull-left">
                <img src="~/AdminTheme/assets/images/users/avatar-1.jpg" alt="" class="thumb-md img-circle">
            </div>*@
            <div class="pull-left">
                <img src="~/ProductPictures/profilePhotos/2021-09-25-14-28-05-profile.png" class="thumb-md img-circle" alt="@currentAccout.Fullname" title="@currentAccout.Fullname">
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@currentAccout.Fullname <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="javascript:void(0)"><i class="md md-face-unlock"></i> Profile<div class="ripple-wrapper"></div></a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings"></i> Settings</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-lock"></i> Lock screen</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings-power"></i> Logout</a></li>
                    </ul>
                </div>

                <p class="text-muted m-0">@currentAccout.Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="/Index" class="waves-effect active"><i class="md md-home"></i><span> Dashboard </span></a>
                </li>
                <li>
                    <a asp-page="/Comments/Index" class="waves-effect"><i class="md md-home"></i><span> Comments </span></a>
                </li>
                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {

                    <li>
                        <a asp-page="/Inventory/Index" class="waves-effect"><i class="md md-home"></i><span>  Inventory </span></a>
                    </li>
                    <li>
                        <a asp-page="/Shop/Orders/Index" class="waves-effect"><i class="md md-home"></i><span> Orders </span></a>
                    </li>
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-mail"></i><span> Shop </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Shop/Slides/Index">Slider</a></li>
                            <li><a asp-page="/Shop/ProductCategories/Index">Categories</a></li>
                            <li><a asp-page="/Shop/Products/Index">Products</a></li>
                            <li><a asp-page="/Shop/ProductPictures/Index">Products Images</a></li>
                        </ul>
                    </li>
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-mail"></i><span> Discounts System</span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Discounts/CustomerDiscounts/Index">Discount Customer</a></li>
                            <li><a asp-page="/Discounts/ColleagueDiscounts/Index"> Discount Colleague</a></li>
                        </ul>
                    </li>
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-mail"></i><span> Users System </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Accounts/Account/Index">Users</a></li>
                            <li><a asp-page="/Accounts/Role/Index"> Roles</a></li>
                        </ul>
                    </li>
                }
                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-mail"></i><span> Blog System </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Blog/Articles/Index">Articles</a></li>
                        <li><a asp-page="/Blog/ArticleCategories/Index">Categories</a></li>
                    </ul>
                </li>

                <li>
                    <a asp-page="/Account/Logout" class="waves-effect active"><i class="fa fa-sign-out"></i><span> Exit </span></a>
                </li>
              
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>