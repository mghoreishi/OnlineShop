@page
@using _0_Framework.Application
@model ServiceHost.Areas.Administration.Pages.Shop.Orders.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "Orders Management";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Search In Orders</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.AccountId"></label>
                        <select class="form-control" asp-for="SearchModel.AccountId" asp-items="Model.Accounts">
                            <option value="0">Select User...</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SearchModel.IsCanceled">Search In Canceled Orders</label>
                        <input class="form-control" asp-for="SearchModel.IsCanceled"/>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">Search</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">View All</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Orders List</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Buyer</th>
                                <th>Total Amount</th>
                                <th>Total Discount</th>
                                <th>Amount Paid</th>
                                <th>Payment Method</th>
                                <th>Tracking Number </th>
                                <th>Order Id</th>
                                <th>Order Date </th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Orders)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.AccountFullName</td>
                                    <td>@item.TotalAmount.ToMoney()</td>
                                    <td>@item.DiscountAmount.ToMoney()</td>
                                    <td>@item.PayAmount.ToMoney()</td>
                                    <td>@item.PaymentMethod</td>
                                    <td>@item.IssueTrackingNo</td>
                                    <td>@item.RefId</td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        @if (item.IsCanceled)
                                        {
                                            <span class="text-danger">Canceled</span>
                                        }
                                        @if (item.IsPaid)
                                        {
                                            <span class="text-success">Paid</span>
                                        }
                                        @if(!item.IsCanceled && !item.IsPaid)
                                        {
                                            <span class="text-warning">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsPaid == false)
                                        {
                                            <a class="btn btn-success pull-right m-rl-5" asp-page-handler="Confirm" asp-route-id="@item.Id">
                                                <i class="fa fa-check"></i> Confirm
                                            </a>
                                            <a class="btn btn-danger pull-right m-rl-5" asp-page-handler="Cancel" asp-route-id="@item.Id">
                                                <i class="fa fa-close"></i> Cancel
                                            </a>
                                        }
                                        <a class="btn btn-primary pull-right m-rl-5"
                                           href="#showmodal=@Url.Page("./Index", "Items", new {id = item.Id})">
                                            <i class="fa fa-id-card"></i> Items
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}