@page
@model ServiceHost.Pages.Account.ChangeAddressModel
@{
    ViewData["Title"] = "Change Address";
}



<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">Change Address</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">HOME</a></li>
                            <li class="active"> Change Address </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">

                        <div class="row">

                            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                                @if (Model.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @Model.ErrorMessage
                                    </div>
                                }
                                @if (Model.SuccessMessage != null)
                                {
                                    <div class="alert alert-success">
                                        @Model.SuccessMessage
                                    </div>
                                }
                                <form method="post" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">Change Address</h4>
                                        <div class="row">
                                                                                      
                                            <div class="col-md-12 mb-20">
                                                <label asp-for="@Model.Command.Address"></label>
                                                <textarea class="text-area" asp-for="@Model.Command.Address" placeholder="Address"></textarea>
                                                <span asp-validation-for="@Model.Command.Address" class="text-danger"></span>
                                            </div>
                                           <input type="hidden" asp-for="@Model.Command.Id"/>
                                            <div class="col-12">
                                                <button class="register-button mt-0">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
