@page
@model ServiceHost.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">Login</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">HOME</a></li>
                            <li class="active">Login </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row justify-content-center">
                            <div class="col-sm-12 col-md-12 col-xs-6 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">

                                        <div class="col-12">
                                            <label asp-for="@Model.Command.Username"></label>
                                            <input type="text" asp-for="@Model.Command.Username" placeholder="UserName">
                                            <span asp-validation-for="@Model.Command.Username" class="text-danger"></span>
                                        </div>
                                        <div class="col-12">
                                            <label asp-for="@Model.Command.Password"></label>
                                            <input type="password" asp-for="@Model.Command.Password" placeholder="Password">
                                            <span asp-validation-for="@Model.Command.Password" class="text-danger"></span>
                                        </div>

                                        @*<div class="col-sm-6">
            <div class="check-box d-inline-block ml-0 ml-md-2">
                <input type="checkbox" id="remember_me">
                <label for="remember_me">Remember me</label>
            </div>
        </div>*@

                                        <div class="col-sm-6 text-left text-sm-left">
                                            <a href="#" class="forget-pass-link  text-danger">Forgotten Password?</a>
                                        </div>
                                        <div class="col-sm-6 text-left text-sm-left">
                                            <a asp-page="/Account/Register"  class="forget-pass-link text-info">Have you not registered?</a>
                                        </div>

                                        <div class="col-md-12">
                                            <button class="register-button">Login</button>
                                        </div>


                                    </div>

                                </form>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
