@page
@model ServiceHost.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">Register</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">HOME</a></li>
                            <li class="active"> Register </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">

                        <div class="row">

                            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                                @if (Model.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @Model.ErrorMessage
                                    </div>
                                }
                                @if (Model.SuccessMessage != null)
                                {
                                    <div class="alert alert-success" >
                                        @Model.SuccessMessage
                                    </div>
                                }
                                <form method="post" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">Register</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="@Model.Command.Fullname"></label>
                                                <input type="text" asp-for="@Model.Command.Fullname" placeholder="Full Name">
                                                <span asp-validation-for="@Model.Command.Fullname" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="@Model.Command.Username"></label>
                                                <input type="text" asp-for="@Model.Command.Username" placeholder="User Name">
                                                <span asp-validation-for="@Model.Command.Username" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label asp-for="@Model.Command.Mobile"></label>
                                                <input type="number" asp-for="@Model.Command.Mobile" placeholder="Mobile">
                                                <span asp-validation-for="@Model.Command.Mobile" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label asp-for="@Model.Command.Address"></label>
                                                <textarea class="text-area" asp-for="@Model.Command.Address" placeholder="Address"></textarea>
                                                <span asp-validation-for="@Model.Command.Address" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="@Model.Command.Password"></label>
                                                <input type="password" asp-for="@Model.Command.Password" placeholder="Password">
                                                <span asp-validation-for="@Model.Command.Password" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="@Model.Command.ConfirmPassword"></label>
                                                <input type="password" asp-for="@Model.Command.ConfirmPassword" placeholder="Confirm Password">
                                                <span asp-validation-for="@Model.Command.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">Register</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
