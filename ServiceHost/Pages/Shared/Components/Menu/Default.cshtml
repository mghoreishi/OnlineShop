                                        <div class="setting-button">
                                            <span></span>
                                            <span></span>
                                            <span></span>
                                        </div>
                                    </a>

                                    <div class="settings-menu-wrapper" id="settings-menu-wrapper">
                                        <div class="single-settings-block">

                                            <ul>
                                                @if (!AuthHelper.IsAuthenticated())
                                                {
                                                    <h4 class="title">My Profile </h4>
                                                    <li>
                                                        <a asp-page="/Account/Register">Register</a>
                                                    </li>
                                                    <li>
                                                        <a asp-page="/Account/Login">Login</a>
                                                    </li>
                                                }
                                                @if (AuthHelper.IsAuthenticated())
                                                {
                                                    <h4 class="title">@AuthHelper.CurrentAccountInfo().Fullname </h4>

                                                    <li>
                                                        <a asp-page="/Orders">My Orders</a>
                                                    </li>
                                                    <li>
                                                        <a asp-page="/Account/ChangeAddress">Change Address</a>
                                                    </li>
                                                    <li>
