<div class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="header-wrapper d-none d-lg-flex">
                    <div class="logo">
                        <a asp-page="/Index">
                            <img src="~/Theme/assets/img/Homelogo.png" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="navigation-menu-wrapper">
                        <nav>
                            <ul>
                                <li>
                                    <a asp-page="/Index">HOME</a>
                                </li>
                                <li class="menu-item-has-children">
                                    <a>PRODUCTS</a>
                                    <ul class="sub-menu">
                                        @foreach (var category in Model.ProductCategories)
                                        {
                                            <li>
                                                <a asp-page="./ProductCategory" asp-route-id="@category.Slug">@category.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li class="menu-item-has-children">
                                    <a>ARTICLES</a>
                                    <ul class="sub-menu">
                                        @foreach (var category in Model.ArticleCategories)
                                        {
                                            <li>
                                                <a asp-page="./ArticleCategory" asp-route-id="@category.Slug">@category.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li>
                                    <a href="https://www.linkedin.com/in/ghoreishi-info/">CONTACT</a>
                                </li>
                                @if (AuthHelper.IsAuthenticated())
                                {
                                    <li>
                                        <a asp-page="/Account/Logout">EXIT</a>
                                    </li>
                                }
                                else
